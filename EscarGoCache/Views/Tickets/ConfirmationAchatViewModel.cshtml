@model EscarGoLibrary.ViewModel.ConfirmationAchatViewModel


<h2>Information sur votre achat</h2>


@if (Model.EstEnregistre)
{
    <div class="panel panel-success">

        <div class="panel-heading">
            <h3 class="panel-title">Important</h3>
        </div>


        <div class="panel-body">
            @Model.Message
        </div>
    </div>
}
else
{
    <div class="panel panel-danger">

        <div class="panel-heading">
            <h3 class="panel-title">Important</h3>
        </div>


        <div class="panel-body">
            @Model.Message
        </div>
    </div>
}


<div class="form-group">
    <div class="control-label col-md-2 ">
        Course
    </div>

    <div class="col-md-10">
        @Model.Course.Label
    </div>
</div>

<div class="form-group">
    <div class="control-label col-md-2 ">
        Date
    </div>

    <div class="col-md-10">
        @Model.Course.Date.ToShortDateString();
    </div>
</div>

<div class="form-group">
    <div class="control-label col-md-2 ">
        Date achat
    </div>

    <div class="col-md-10">
        @Model.DateAchat.ToShortDateString();
    </div>
</div>


<div class="form-group">
    <div class="control-label col-md-2 ">
        Nombre de tickets
    </div>

    <div class="col-md-10">
        @Model.NbTickets
    </div>
</div>
<br />
<div class="form-group">
    <div>
        @Html.ActionLink("Continuer", "Index", "Courses", null, new { role = "button", @class = "btn btn-primary" })
    </div>
</div>

