@model EscarGoLibrary.Models.DetailCourseViewModel

@{
    ViewBag.Title = "Détails";
}

<h2>Détails</h2>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Course.Label)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.Label)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Course.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Course.Pays)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.Pays)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Course.Ville)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.Ville)
        </dd>

    </dl>
</div>
<p>


    <h2>Les concurrents</h2>
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Concurrent
            </th>

            <th>
                Cote
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Concurrents)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SC)/1
                </td>
                <td>

                    @Html.ActionLink("Parier", "Bet", new { idCourse =Model.Course.CourseId, idConcurrent = item.ConcurrentId }, new { role = "button", @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>

    @Html.ActionLink("Retour", "Index",null, new { role = "button", @class = "btn btn-primary" })
</p>
